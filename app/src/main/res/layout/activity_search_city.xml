<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/fragment_weather_detail_day_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/search_view_guideline"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.15"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_search_city_title"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/search_view_guideline"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView"
            />

    <AutoCompleteTextView
            android:id="@+id/et_auto_complete123"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:dropDownHeight="150dp"
            android:layout_gravity="center"
            android:textCursorDrawable="@null"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/darker_gray"
            android:maxLines="1"
            android:textSize="20sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="@+id/search_view_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_autocomplete_clear"
            />

    <ImageView
            android:id="@+id/iv_autocomplete_clear"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end|center_vertical"
            android:background="@drawable/ic_clear"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="@+id/et_auto_complete123"
            app:layout_constraintBottom_toBottomOf="@+id/et_auto_complete123"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            />



</androidx.constraintlayout.widget.ConstraintLayout>